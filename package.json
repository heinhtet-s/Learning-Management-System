{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dist": "npx tsc",
    "dev": "cross-env NODE_ENV=development nodemon --legacy-watch src/server.ts",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint . --fix",
    "lint:fix": "eslint --fix",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --fix",
    "prepare": "husky",
    "migrate:dev": "cross-env MIGRATE_MODE=development node script/migration.js",
    "migrate:prod": "cross-env MIGRATE_MODE=production node script/migration.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.13.0",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/source-map-support": "^0.5.10",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "mongoose": "^8.8.2",
    "rate-limiter-flexible": "^5.0.4",
    "source-map-support": "^0.5.21",
    "winston-mongodb": "^6.0.0"
  }
}
